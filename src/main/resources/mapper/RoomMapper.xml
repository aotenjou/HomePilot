<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.manager.mapper.RoomMapper">

    <select id="selectByHomeId" resultType="com.example.manager.entity.Room">
        SELECT * FROM ROOM WHERE home_id = #{homeId} AND is_deleted = 0
    </select>

    <delete id="deleteByHomeId">
        DELETE FROM ROOM WHERE home_id = #{homeId}
    </delete>

    <select id="selectByRoomIdAndHomeId" resultType="com.example.manager.entity.Room">
        SELECT * FROM ROOM WHERE id = #{id} AND home_id = #{homeId} AND is_deleted = 0
    </select>

    <insert id="insertRoom">
        INSERT INTO ROOM(home_id, name) VALUES (#{homeId}, #{name})
    </insert>

    <select id="getLastInsertId" resultType="java.lang.Long">
        SELECT LAST_INSERT_ID()
    </select>

    <delete id="deleteRoom">
        DELETE FROM ROOM WHERE id = #{id} AND home_id = #{homeId}
    </delete>

    <select id="selectNameById" resultType="java.lang.String">
        SELECT name FROM ROOM WHERE id = #{id} AND is_deleted = 0
    </select>

    <select id="selectById" resultType="com.example.manager.entity.Room">
        SELECT * FROM ROOM WHERE id = #{id} AND is_deleted = 0
    </select>
</mapper>